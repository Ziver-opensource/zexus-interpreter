# Nested error handling
action risky_operation():
    try:
        if not file_exists("fake_file.txt"):
            throw "File not found"
        return "Success"
    catch error:
        return "Caught: " + string(error)

let result = risky_operation()
print "Risky operation result: " + string(result)

